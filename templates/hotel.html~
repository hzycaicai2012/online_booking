<script type=text/javascript>
  $(function() {
      $('#hotCity li').bind('click', function() {
      $.getJSON($SCRIPT_ROOT + '/sort_hotel', {
       a: $('input[name="a"]').val(),
      b: $('input[name="b"]').val()
	      }, function(data) {
         $("#result").text(data.result);
      });
      return false;
      });
   });
